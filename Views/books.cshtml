<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Books</title>
  </head>
  <body>
    <h1>All Books</h1>
    @if(Model.Count==0)
    {
      <p>
        No books have been added yet
      </p>
    }
    else
    {
      <ul>
        @foreach(var book in Model)
        {
          <li><a href="/books/@book.GetId()">@book.GetTitle()</a></li>
        }
      </ul>
    }
    <a href="/books/add">Add New Book</a>
    <a href="/">Home</a>
  </body>
</html>
