<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Authors</title>
  </head>
  <body>
    <h1>All Authors</h1>
    @if(Model.Count==0)
    {
      <p>
        No authors have been added yet
      </p>
    }
    else
    {
      <ul>
        @foreach(var author in Model)
        {
          <li><a href="/authors/@author.GetId()">@author.GetName()</a></li>
        }
      </ul>
    }
    <a href="/authors/add">Add New Author</a>
    <a href="/">Home</a>
  </body>
</html>
