<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Genres</title>
  </head>
  <body>
    <h1>All Genres</h1>
    @if(Model.Count==0)
    {
      <p>
        No genres have been added yet
      </p>
    }
    else
    {
      <ul>
        @foreach(var genre in Model)
        {
          <li><a href="/genres/@genre.GetId()">@genre.GetName()</a></li>
        }
      </ul>
    }
    <a href="/genres/add">Add New Genre</a>
    <a href="/">Home</a>
  </body>
</html>
